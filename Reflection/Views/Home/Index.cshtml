@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />
    <link href="~/CSS/screen1.css" rel="stylesheet" type="text/css" />
    <title>Reflect</title>
</head>

<body>
    <div class="container">
        <!-- Button trigger modal -->
        <!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Screen1"> -->
        <!-- Screen1 -->
        <!-- </button> -->
        <!-- Modal -->
        <!-- <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="Screen1Title" -->
        <!-- aria-hidden="true"> -->
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content custom-mc">
                <div class="modal-header custom-mh">
                    <div class="media">
                        <img class="align-self-center mr-3 head-logo" src="~/Images/logo.png"
                             alt="Generic placeholder image">
                        <div class="media-body media-mb">
                            <div class="heading">Reflect</div>
                            <span class="head-desc"> Invite people to share how they feel </span>
                        </div>
                    </div>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body modal-mb">
                    <div class="question">Question</div>
                    <div class="input-group custom-in">
                        <select class="cs">
                            <!-- <option selected>Choose...</option> -->
                            <option value="1" selected>How are you feeling?</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                        <span class="sel-chev"></span>
                    </div>
                    <div class="custom-control custom-checkbox cc">
                        <input type="checkbox" class="custom-control-input" id="1">
                        <label class="custom-control-label cc-l" for="1">Reflections are anonymous</label>
                        <img src="~/Images/ex.png" alt="!" class="excla">
                    </div>
                    <div class="post">
                        <div class="send-post">Send post at</div>
                        <div class="date">
                            <input type="date" alt="date" class="date-ip" />
                            <span class="date-icon"></span>
                        </div>
                        <div class="time-ip ml-1">
                            Send now
                            <span class="time-icon"></span>
                        </div>
                        <div class="selc ml-1">
                            <select class="cs">
                                <option value="1" selected>Does not repeat </option>
                                <option value="2">Every weekday (Mon-Fri)</option>
                                <option value="3">Weekly</option>
                                <option value="3">Monthly</option>
                                <option value="3">Custom</option>
                            </select>
                            <span class="sel-chev2"></span>
                        </div>
                    </div>
                    <div class="prev">Preview</div>
                    <div class="br-blk">
                        <div class="created">Created by: Cara Coleman</div>
                        <span class="divider">|</span>
                        <div class="reflections">Reflections are public</div>
                        <div class="feeling">How are you feeling?</div>
                        <div class="smiles">
                            <span class="ava">
                                <img src="~/Images/1.png" alt="smile1" class="avatars">
                            </span>
                            <span class="ava">
                                <img src="~/Images/2.png" alt="smile2" class="avatars">
                            </span>
                            <span class="ava">
                                <img src="~/Images/3.png" alt="smile3" class="avatars">
                            </span>
                            <span class="ava">
                                <img src="~/Images/4.png" alt="smile4" class="avatars">
                            </span>
                            <span class="ava">
                                <img src="~/Images/5.png" alt="smile5" class="avatars">
                            </span>
                        </div>
                    </div>
                </div>
                <div class="mf">
                    <span class="clk"></span>
                    <span class="manage">Manage recurring reflections (3)</span>
                    <div class="float-right">
                        <button type="button" class="btn-cancle" data-dismiss="modal">Close</button>
                        <button type="button" class="btn-send">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

</html>