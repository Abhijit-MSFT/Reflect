    <script type="text/javascript">
        $(document).ready(function () {
            $.ajax({
                type: 'GET',
                url: 'api/GetReflections',
                success: function (data) {
                    $("#createdby").text(data.createdby);
                    $("#questiontitle").text(data.createdby);
                    var blockdata = ''
                    data.optionResponses.forEach(x => {
                        var img;
                        if (x.color == "green") {
                            img = '1.png';
                        }
                        else if (x.color == "light-green") {
                            img = '2.png';
                        }
                        else if (x.color == "orng") {
                            img = '3.png';
                        }
                        else if (x.color == "red") {
                            img = '4.png';
                        }
                        else if (x.color == "dark-red") {
                            img = '5.png';
                        }

                        blockdata = blockdata + '<div class="media custom-md"><img src="../Images/' + img + '" class="align-self-start smils" alt="smile2"><div class="media-body cb-smile2"><div class="progress custom-pr"><div class="progress-bar bg-' + x.color + '" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:' + x.width + '%"></div></div><div class="smile-desc">' + x.description + '</div></div></div>';

                    })
                    $("#reviewblock").html(blockdata);
                }
            });
        });
    </script>
