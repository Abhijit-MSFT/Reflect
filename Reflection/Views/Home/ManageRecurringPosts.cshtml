@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />
    <title>Screen3</title>
</head>

<body>
    <div class="loader"></div>
    <div class="container">
        <!-- Modal -->
        <input type="text" value=@ViewBag.emailid id="contextemail" style="display:none" />
        <div class="" role="document">
            <div class="">
                <div class="modal-mb-sc2">
                    <table class="table custom-tb">
                        <thead>
                            <tr>
                                <th scope="col" class="qutin">Question<span id="questioncount"></span></th>
                                <th scope="col" class="privacy">Privacy</th>
                                <th scope="col" class="snd-post">Send post at</th>
                            </tr>
                        </thead>
                        <tbody id="tablebody">
                        </tbody>
                    </table>
                </div>
                <div class="mf modal-footer">
                    <div class="float-left">
                        <span class="left-chev"></span>
                        Back
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal" tabindex="-1" role="dialog" id="myalert">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h5>Are you sure to delete ?</h5>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="deleteRecurssion()">Yes</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">NO</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" tabindex="-1" role="dialog" id="edit">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4>Edit Recurrance</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h5 id="currentrecurrsionquestion"></h5>
                    <div class="privacy2">Privacy</div>
                    <div class="input-group custom-in">
                        <select class="cs htmlEle" id="currentprivacy">
                            <option value="public" selected>Public - Names will be displayed with responses</option>
                            <option value="anonymous">Anonymous - Names will be omitted from responses</option>
                            <option value="owner" selected>Owner-Responses with names displayed for owners only</option>
                        </select>
                        <span class="sel-chev3"></span>
                    </div>
                    <div class="post">
                        <div class="row custom-rw">
                            <div class="col-6 custom-col">
                                <div class="date">
                                    <div class="blk-head" id="currentdate">Date</div>
                                    <input type="date"  class="date-ip htmlEle" ata-date="" data-date-format="ddd MMM DD, YYYY" id="execdate" />
                                    <span class="date-icon"></span>
                                </div>
                            </div>
                            <div class="col-6 custom-col">
                                <div class="blk-head">Time</div>
                                <div class="selc">
                                    <select class="cs htmlEle" id="exectime">
                                        
                                    </select>
                                    <span class="sel-chev2"></span>
                                </div>
                            </div>
                            <div class="col-6 custom-col">
                                <div class="blk-head rec">Recurrence</div>
                                <div class="selc">
                                    <select class="cs htmlEle" id="currentrecurrance">
                                        <option value="Does not repeat" selected>Does not repeat </option>
                                        <option value="Every weekday">Every weekday (Mon-Fri)</option>
                                        <option value="Weekly">Weekly</option>
                                        <option value="Monthly">Monthly</option>
                                        <option value="Custom">Custom</option>
                                    </select>
                                    <span class="sel-chev2"></span>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn-send" data-dismiss="modal" onclick="saveRecurssion()">Save</button>
                            <button type="button" class="btn-cancle" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="@("https://unpkg.com/@microsoft/teams-js@1.4.1/dist/MicrosoftTeams.min.js")"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.3/moment.min.js"></script>
    <script src="~/Scripts/ManageRecurringPosts.js"></script>
    <script src="~/Scripts/timevalues.js"></script>
</body>
</html>